{
  "declaration": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "outDir": "./dist",
    "pretty": true,
    "removeComments": true,
    "target": "ESNext",
    "strict": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
